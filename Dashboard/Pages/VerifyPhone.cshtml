@page
@model PocketFence_AI.Dashboard.Pages.VerifyPhoneModel
@{
    ViewData["Title"] = "Verify Phone";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PocketFence</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <style>
        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
        }
        .verification-container {
            max-width: 450px;
            width: 100%;
            padding: 20px;
        }
        .verification-card {
            background: white;
            border-radius: 16px;
            padding: 40px;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.2);
        }
        .verification-icon {
            font-size: 4rem;
            margin-bottom: 1rem;
        }
        .success-icon {
            color: #28a745;
        }
        .error-icon {
            color: #dc3545;
        }
        .code-input {
            font-size: 2rem;
            text-align: center;
            letter-spacing: 0.5rem;
            font-weight: bold;
            padding: 20px;
        }
        .btn-primary {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border: none;
            padding: 12px 30px;
            font-size: 1rem;
            font-weight: 600;
            border-radius: 8px;
            width: 100%;
        }
        .btn-primary:hover {
            background: linear-gradient(135deg, #764ba2 0%, #667eea 100%);
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(102, 126, 234, 0.4);
        }
        .btn-outline-secondary {
            border-radius: 8px;
            padding: 10px 20px;
            font-weight: 600;
        }
        .phone-display {
            font-size: 1.2rem;
            font-weight: 600;
            color: #667eea;
        }
    </style>
</head>
<body>
    <div class="verification-container">
        <div class="verification-card">
            @if (Model.Success)
            {
                <!-- Success State -->
                <div class="text-center">
                    <i class="bi bi-check-circle-fill verification-icon success-icon"></i>
                    <h2 class="mb-3">Phone Verified!</h2>
                    <p class="text-muted mb-4">Your phone number has been successfully verified.</p>
                    <a href="/account" class="btn btn-primary">
                        <i class="bi bi-person-circle"></i> Go to Account
                    </a>
                </div>
            }
            else if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <!-- Error State -->
                <div class="text-center">
                    <i class="bi bi-x-circle-fill verification-icon error-icon"></i>
                    <h2 class="mb-3">Verification Failed</h2>
                    <div class="alert alert-danger">
                        <strong>Error:</strong> @Model.ErrorMessage
                    </div>
                    <p class="text-muted mb-3">Possible reasons:</p>
                    <ul class="text-start text-muted small mb-4">
                        <li>The code has expired (codes expire after 10 minutes)</li>
                        <li>The code was already used</li>
                        <li>The code was entered incorrectly</li>
                    </ul>
                    <div class="d-grid gap-2">
                        <a href="/account" class="btn btn-primary">
                            <i class="bi bi-arrow-clockwise"></i> Request New Code
                        </a>
                        <a href="/login" class="btn btn-outline-secondary">
                            <i class="bi bi-box-arrow-in-right"></i> Back to Login
                        </a>
                    </div>
                </div>
            }
            else
            {
                <!-- Verification Form -->
                <div class="text-center">
                    <i class="bi bi-phone-fill verification-icon" style="color: #667eea;"></i>
                    <h2 class="mb-3">Verify Phone Number</h2>
                    <p class="text-muted mb-2">Enter the 6-digit code sent to:</p>
                    <p class="phone-display mb-4">@Model.PhoneNumberDisplay</p>
                    
                    <form method="post">
                        <input type="hidden" asp-for="PhoneNumber" />
                        
                        <div class="mb-4">
                            <input type="text" 
                                   asp-for="Code" 
                                   class="form-control code-input" 
                                   placeholder="000000"
                                   maxlength="6"
                                   pattern="[0-9]{6}"
                                   required
                                   autofocus />
                            <span asp-validation-for="Code" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-primary mb-3">
                            <i class="bi bi-check-lg"></i> Verify Code
                        </button>
                    </form>

                    <div class="text-center mt-4">
                        <p class="text-muted small mb-2">Didn't receive the code?</p>
                        <a href="/account" class="btn btn-outline-secondary btn-sm">
                            <i class="bi bi-arrow-clockwise"></i> Resend Code
                        </a>
                    </div>

                    <hr class="my-4">
                    
                    <div class="text-center">
                        <a href="/account" class="text-decoration-none">
                            <i class="bi bi-arrow-left"></i> Back to Account
                        </a>
                    </div>
                </div>
            }
        </div>

        <div class="text-center mt-3">
            <p class="text-white small">
                <i class="bi bi-shield-check"></i> Verification codes expire after 10 minutes
            </p>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Auto-format code input (digits only)
        document.querySelector('.code-input')?.addEventListener('input', function(e) {
            this.value = this.value.replace(/[^0-9]/g, '');
        });

        // Auto-submit when 6 digits entered
        document.querySelector('.code-input')?.addEventListener('input', function(e) {
            if (this.value.length === 6) {
                // Give user brief moment to see all digits before submitting
                setTimeout(() => {
                    this.form.submit();
                }, 300);
            }
        });
    </script>
</body>
</html>
