@page
@model IndexModel
@{
    ViewData["Title"] = "Dashboard";
}

<div class="row mb-4">
    <div class="col">
        <h1>Dashboard</h1>
        <p class="text-muted">Welcome back, @Model.Username! Here's your family's online safety summary.</p>
    </div>
    <div class="col-auto">
        <a href="/Setup/Start" class="btn btn-primary btn-lg">
            <i class="bi bi-magic"></i> Setup Wizard
        </a>
    </div>
</div>

<div class="row mb-4">
    <div class="col-md-3">
        <div class="card text-white bg-danger">
            <div class="card-body">
                <h5 class="card-title">Blocked Today</h5>
                <h2 class="display-4">@Model.BlockedToday</h2>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-warning">
            <div class="card-body">
                <h5 class="card-title">This Week</h5>
                <h2 class="display-4">@Model.BlockedThisWeek</h2>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-info">
            <div class="card-body">
                <h5 class="card-title">This Month</h5>
                <h2 class="display-4">@Model.BlockedThisMonth</h2>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-success">
            <div class="card-body">
                <h5 class="card-title">All Time</h5>
                <h2 class="display-4">@Model.BlockedAllTime</h2>
            </div>
        </div>
    </div>
</div>

<div class="row mb-4">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5>Recent Blocks</h5>
            </div>
            <div class="card-body">
                @if (Model.RecentBlocks.Any())
                {
                    <table class="table table-sm">
                        <thead>
                            <tr>
                                <th>Time</th>
                                <th>URL/Content</th>
                                <th>Reason</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var block in Model.RecentBlocks.Take(10))
                            {
                                <tr>
                                    <td><small>@block.Time.ToString("HH:mm:ss")</small></td>
                                    <td><small>@block.Content</small></td>
                                    <td><span class="badge bg-danger">@block.Reason</span></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <div class="empty-state">
                        <i class="bi bi-shield-check"></i>
                        <h4>All Clear!</h4>
                        <p class="text-muted">No blocks recorded yet. Your family is browsing safely!</p>
                    </div>
                }
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5>Blocks by Category</h5>
            </div>
            <div class="card-body">
                @foreach (var category in Model.BlocksByCategory)
                {
                    <div class="mb-2">
                        <div class="d-flex justify-content-between">
                            <span>@category.Key</span>
                            <strong>@category.Value</strong>
                        </div>
                        <div class="progress" style="height: 5px;">
                            <div class="progress-bar" role="progressbar" 
                                 style="width: @(category.Value * 100 / (Model.BlockedAllTime == 0 ? 1 : Model.BlockedAllTime))%">
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0"><i class="bi bi-people"></i> My Children</h5>
                <a href="/AddChild" class="btn btn-primary btn-sm">
                    <i class="bi bi-plus-circle"></i> Add Child
                </a>
            </div>
            <div class="card-body">
                @if (Model.Children.Any())
                {
                    <div class="row g-3">
                        @foreach (var child in Model.Children)
                        {
                            <div class="col-md-4">
                                <div class="card border-primary h-100">
                                    <div class="card-body">
                                        <h5 class="card-title">
                                            <i class="bi bi-person-circle text-primary"></i> @child.Name
                                        </h5>
                                        <p class="text-muted mb-2">
                                            <small>
                                                <strong>@child.Age years old</strong> â€¢ 
                                                @if (child.DeviceType == "iOS")
                                                {
                                                    <i class="bi bi-apple"></i><text> iPhone/iPad</text>
                                                }
                                                else if (child.DeviceType == "Android")
                                                {
                                                    <i class="bi bi-phone"></i><text> Android</text>
                                                }
                                                else
                                                {
                                                    <i class="bi bi-laptop"></i><text> Windows</text>
                                                }
                                            </small>
                                        </p>
                                        
                                        @if (child.Concerns.Any())
                                        {
                                            <div class="mb-2">
                                                <small class="text-muted">Concerns:</small>
                                                <div class="mt-1">
                                                    @foreach (var concern in child.Concerns.Take(3))
                                                    {
                                                        <span class="badge bg-warning text-dark me-1">@concern</span>
                                                    }
                                                    @if (child.Concerns.Count > 3)
                                                    {
                                                        <span class="badge bg-secondary">+@(child.Concerns.Count - 3) more</span>
                                                    }
                                                </div>
                                            </div>
                                        }
                                        
                                        <div class="mt-3">
                                            <div class="d-flex justify-content-between align-items-center mb-2">
                                                <small class="text-muted">Total Blocks:</small>
                                                <span class="badge bg-danger">@child.TotalBlocks</span>
                                            </div>
                                            <small class="text-muted">
                                                Updated: @child.LastUpdated.ToString("MMM d, yyyy")
                                            </small>
                                        </div>
                                    </div>
                                    <div class="card-footer bg-transparent">
                                        <div class="d-grid gap-2">
                                            <a href="/Setup/Start?childId=@child.Id" class="btn btn-outline-primary btn-sm">
                                                <i class="bi bi-gear"></i> Update Settings
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="text-center py-5">
                        <i class="bi bi-person-plus-fill text-muted" style="font-size: 4rem;"></i>
                        <h4 class="mt-3">No Children Added Yet</h4>
                        <p class="text-muted">Add your first child to start managing their device restrictions</p>
                        <a href="/AddChild" class="btn btn-primary">
                            <i class="bi bi-plus-circle"></i> Add Your First Child
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
