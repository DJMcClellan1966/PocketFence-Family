@page
@model IndexModel
@{
    ViewData["Title"] = "Dashboard";
}

<div class="row mb-4">
    <div class="col">
        <h1>Dashboard</h1>
        <p class="text-muted">Welcome back, @Model.Username! Here's your family's online safety summary.</p>
    </div>
</div>

<div class="row mb-4">
    <div class="col-md-3">
        <div class="card text-white bg-danger">
            <div class="card-body">
                <h5 class="card-title">Blocked Today</h5>
                <h2 class="display-4">@Model.BlockedToday</h2>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-warning">
            <div class="card-body">
                <h5 class="card-title">This Week</h5>
                <h2 class="display-4">@Model.BlockedThisWeek</h2>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-info">
            <div class="card-body">
                <h5 class="card-title">This Month</h5>
                <h2 class="display-4">@Model.BlockedThisMonth</h2>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-white bg-success">
            <div class="card-body">
                <h5 class="card-title">All Time</h5>
                <h2 class="display-4">@Model.BlockedAllTime</h2>
            </div>
        </div>
    </div>
</div>

<div class="row mb-4">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5>Recent Blocks</h5>
            </div>
            <div class="card-body">
                @if (Model.RecentBlocks.Any())
                {
                    <table class="table table-sm">
                        <thead>
                            <tr>
                                <th>Time</th>
                                <th>URL/Content</th>
                                <th>Reason</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var block in Model.RecentBlocks.Take(10))
                            {
                                <tr>
                                    <td><small>@block.Time.ToString("HH:mm:ss")</small></td>
                                    <td><small>@block.Content</small></td>
                                    <td><span class="badge bg-danger">@block.Reason</span></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <p class="text-muted">No blocks recorded yet. Your family is browsing safely!</p>
                }
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5>Blocks by Category</h5>
            </div>
            <div class="card-body">
                @foreach (var category in Model.BlocksByCategory)
                {
                    <div class="mb-2">
                        <div class="d-flex justify-content-between">
                            <span>@category.Key</span>
                            <strong>@category.Value</strong>
                        </div>
                        <div class="progress" style="height: 5px;">
                            <div class="progress-bar" role="progressbar" 
                                 style="width: @(category.Value * 100 / (Model.BlockedAllTime == 0 ? 1 : Model.BlockedAllTime))%">
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h5>Family Members</h5>
            </div>
            <div class="card-body">
                <p class="text-muted">Family profile management coming soon...</p>
            </div>
        </div>
    </div>
</div>
