@page
@model BlockedModel
@{
    ViewData["Title"] = "Blocked Content";
}

<div class="row mb-4">
    <div class="col">
        <h1>Blocked Content</h1>
        <p class="text-muted">Complete history of blocked URLs and content</p>
    </div>
</div>

<div class="row mb-3">
    <div class="col-md-8">
        <input type="text" class="form-control" placeholder="Search blocked content..." id="searchBox">
    </div>
    <div class="col-md-4">
        <select class="form-select" id="categoryFilter">
            <option value="">All Categories</option>
            <option value="adult">Adult Content</option>
            <option value="violence">Violence</option>
            <option value="hate">Hate Speech</option>
            <option value="dangerous">Dangerous Activities</option>
        </select>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Date/Time</th>
                    <th>URL/Content</th>
                    <th>Category</th>
                    <th>Reason</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var block in Model.BlockedItems)
                {
                    <tr>
                        <td><small>@block.Timestamp.ToString("MM/dd/yyyy HH:mm")</small></td>
                        <td>@block.Content</td>
                        <td><span class="badge bg-warning">@block.Category</span></td>
                        <td><small>@block.Reason</small></td>
                        <td>
                            <button class="btn btn-sm btn-outline-primary">Details</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        @if (!Model.BlockedItems.Any())
        {
            <div class="text-center py-5">
                <h4 class="text-muted">No blocked content yet</h4>
                <p>Your family is browsing safely!</p>
            </div>
        }
    </div>
</div>

<nav aria-label="Page navigation" class="mt-3">
    <ul class="pagination justify-content-center">
        <li class="page-item disabled">
            <a class="page-link" href="#" tabindex="-1">Previous</a>
        </li>
        <li class="page-item active"><a class="page-link" href="#">1</a></li>
        <li class="page-item"><a class="page-link" href="#">2</a></li>
        <li class="page-item"><a class="page-link" href="#">3</a></li>
        <li class="page-item">
            <a class="page-link" href="#">Next</a>
        </li>
    </ul>
</nav>
