@page
@model BlockedModel
@{
    ViewData["Title"] = "Blocked Content";
}

<div class="row mb-4">
    <div class="col-md-8">
        <h1>Blocked Content</h1>
        <p class="text-muted">Complete history of blocked URLs and content</p>
    </div>
    <div class="col-md-4 text-end">
        <div class="btn-group">
            <a href="/blocked?handler=Export" class="btn btn-success export-btn" title="Export all blocked content" onclick="showLoading(this)">
                <i class="bi bi-download"></i> Export All to CSV
            </a>
            @if (!string.IsNullOrWhiteSpace(Model.SearchQuery) || !string.IsNullOrWhiteSpace(Model.CategoryFilter) || !string.IsNullOrWhiteSpace(Model.DateRangeFilter))
            {
                <a href="/blocked?handler=ExportFiltered&search=@Model.SearchQuery&category=@Model.CategoryFilter&dateRange=@Model.DateRangeFilter" 
                   class="btn btn-outline-success export-btn" 
                   title="Export filtered results only"
                   onclick="showLoading(this)">
                    <i class="bi bi-funnel"></i> Export Filtered
                </a>
            }
        </div>
    </div>
</div>

<form method="get" class="row g-2 mb-3">
    <div class="col-md-4">
        <div class="input-group">
            <span class="input-group-text"><i class="bi bi-search"></i></span>
            <input type="text" 
                   class="form-control" 
                   name="search" 
                   placeholder="Search URL, reason, or category..." 
                   value="@Model.SearchQuery"
                   id="searchInput">
        </div>
    </div>
    <div class="col-md-3">
        <select class="form-select" name="category" id="categoryFilter">
            <option value="">All Categories (@Model.TotalCount)</option>
            @foreach (var cat in Model.AvailableCategories)
            {
                var count = Model.GetCategoryCount(cat);
                <option value="@cat" selected="@(Model.CategoryFilter == cat)">@cat (@count)</option>
            }
        </select>
    </div>
    <div class="col-md-3">
        <select class="form-select" name="dateRange" id="dateRangeFilter">
            <option value="" selected="@(string.IsNullOrEmpty(Model.DateRangeFilter))">All Time</option>
            <option value="today" selected="@(Model.DateRangeFilter == "today")">Today</option>
            <option value="week" selected="@(Model.DateRangeFilter == "week")">Last 7 Days</option>
            <option value="month" selected="@(Model.DateRangeFilter == "month")">Last 30 Days</option>
        </select>
    </div>
    <div class="col-md-2">
        <div class="btn-group w-100">
            <button type="submit" class="btn btn-primary" title="Apply filters" id="filterBtn">
                <span class="btn-text"><i class="bi bi-funnel"></i> Filter</span>
                <span class="spinner-border spinner-border-sm d-none" role="status" aria-hidden="true"></span>
            </button>
            <a href="/blocked" class="btn btn-outline-secondary" title="Clear all filters">
                <i class="bi bi-x-circle"></i>
            </a>
        </div>
    </div>
</form>

<script>
    // Auto-submit on category/date change for better UX
    document.getElementById('categoryFilter').addEventListener('change', function() {
        this.form.submit();
    });
    document.getElementById('dateRangeFilter').addEventListener('change', function() {
        this.form.submit();
    });
    // Focus search input on page load
    document.getElementById('searchInput').focus();
    
    // Loading indicator for export buttons
    function showLoading(btn) {
        btn.classList.add('loading');
        setTimeout(() => {
            btn.classList.remove('loading');
        }, 2000);
    }
</script>

@if (!string.IsNullOrWhiteSpace(Model.SearchQuery) || !string.IsNullOrWhiteSpace(Model.CategoryFilter) || !string.IsNullOrWhiteSpace(Model.DateRangeFilter))
{
    <div class="alert alert-info d-flex justify-content-between align-items-center">
        <div>
            <strong>Filtered Results:</strong> @Model.BlockedItems.Count of @Model.TotalCount total blocks
            @if (!string.IsNullOrWhiteSpace(Model.SearchQuery))
            {
                <span class="badge bg-primary ms-2">Search: "@Model.SearchQuery"</span>
            }
            @if (!string.IsNullOrWhiteSpace(Model.CategoryFilter))
            {
                <span class="badge bg-success ms-2">Category: @Model.CategoryFilter</span>
            }
            @if (!string.IsNullOrWhiteSpace(Model.DateRangeFilter))
            {
                <span class="badge bg-info ms-2">Date: @Model.DateRangeFilter</span>
            }
        </div>
        <a href="/blocked" class="btn btn-sm btn-outline-secondary">
            <i class="bi bi-x-circle"></i> Clear All Filters
        </a>
    </div>
}

<div class="card">
    <div class="card-body">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Date/Time</th>
                    <th>URL/Content</th>
                    <th>Category</th>
                    <th>Reason</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var block in Model.BlockedItems)
                {
                    <tr>
                        <td><small>@block.Timestamp.ToString("MM/dd/yyyy HH:mm")</small></td>
                        <td>@block.Content</td>
                        <td><span class="badge bg-warning">@block.Category</span></td>
                        <td><small>@block.Reason</small></td>
                        <td>
                            <button class="btn btn-sm btn-outline-primary">Details</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        @if (!Model.BlockedItems.Any())
        {
            <div class="empty-state">
                <i class=\"bi bi-shield-check\"></i>
                <h4>No blocked content yet</h4>
                <p>Your family is browsing safely!</p>
            </div>
        }
    </div>
</div>


