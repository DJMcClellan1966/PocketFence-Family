{
  "PocketFenceAI": {
    "EnableContentFiltering": true,
    "EnableThreatDetection": true
  },
  
  "ContentFilter": {
    "BlockedDomains": [
      "malicious.com",
      "phishing.net",
      "adult-content.com",
      "gambling.org",
      "illegal-downloads.net"
    ],
    "BlockedKeywords": [
      "adult",
      "gambling",
      "drugs",
      "weapons",
      "violence",
      "malware",
      "phishing",
      "illegal",
      "torrent"
    ]
  },
  
  "AI": {
    "ThreatKeywords": [
      "malware",
      "virus",
      "phishing",
      "adult",
      "gambling",
      "violence",
      "drugs",
      "weapons",
      "hate"
    ],
    "SafePatterns": [
      "education",
      "learning",
      "school",
      "tutorial",
      "help",
      "support",
      "documentation",
      "official"
    ]
  },
  
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning"
    }
  }
}
