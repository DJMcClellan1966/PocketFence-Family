@page
@model PocketFence_AI.Dashboard.Pages.OAuth.AppleCallbackModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>Apple Sign In - Processing...</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow">
                    <div class="card-body text-center p-5">
                        @if (Model.Success)
                        {
                            <div class="text-success mb-4">
                                <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" fill="currentColor" class="bi bi-check-circle" viewBox="0 0 16 16">
                                    <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
                                    <path d="M10.97 4.97a.235.235 0 0 0-.02.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-1.071-1.05z"/>
                                </svg>
                            </div>
                            <h3 class="mb-3">Apple Account Connected!</h3>
                            <p class="text-muted mb-4">Successfully authenticated with Apple. You can now link iOS devices.</p>
                            <p class="small text-muted">Redirecting to device linking...</p>
                        }
                        else
                        {
                            <div class="text-danger mb-4">
                                <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" fill="currentColor" class="bi bi-x-circle" viewBox="0 0 16 16">
                                    <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
                                    <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z"/>
                                </svg>
                            </div>
                            <h3 class="mb-3">Authentication Failed</h3>
                            <p class="text-danger mb-4">@Model.ErrorMessage</p>
                            <a href="/Devices/LinkiOS" class="btn btn-primary">Try Again</a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    @if (Model.Success)
    {
        <script>
            // Redirect to device linking page after 2 seconds
            setTimeout(() => {
                window.location.href = '/Devices/LinkiOS';
            }, 2000);
        </script>
    }
</body>
</html>
