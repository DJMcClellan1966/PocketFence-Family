@page
@model RecommendationsModel
@{
    ViewData["Title"] = "Your Personalized Recommendations";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            
            <!-- Header -->
            <div class="text-center mb-4">
                <h1 class="display-5 fw-bold">üìã Your Personalized Setup Plan</h1>
                <p class="lead text-muted">
                    For a <strong>@Model.ChildAge-year-old</strong> using <strong>@Model.DeviceType</strong>
                </p>
            </div>

            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="alert alert-warning">
                    <i class="bi bi-exclamation-triangle"></i> @Model.ErrorMessage
                    <a href="/Setup/Start" class="alert-link">Start over</a>
                </div>
            }
            else
            {
                <!-- AI Summary -->
                <div class="card shadow-sm mb-4 border-primary">
                    <div class="card-body">
                        <h5 class="card-title"><i class="bi bi-robot"></i> AI Analysis</h5>
                        <p class="card-text">@Model.AiSummary</p>
                    </div>
                </div>

                <!-- Recommendations Checklist -->
                <div class="card shadow-sm mb-4">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0"><i class="bi bi-check2-square"></i> What to Enable</h5>
                    </div>
                    <div class="card-body">
                        <div class="list-group list-group-flush">
                            @foreach (var recommendation in Model.Recommendations)
                            {
                                <div class="list-group-item">
                                    <div class="d-flex align-items-start">
                                        <div class="form-check me-3">
                                            <input class="form-check-input" type="checkbox" id="rec-@recommendation.Id">
                                        </div>
                                        <div class="flex-grow-1">
                                            <h6 class="mb-1">@recommendation.Title</h6>
                                            <p class="mb-2 text-muted small">@recommendation.Description</p>
                                            <span class="badge bg-@recommendation.PriorityColor">@recommendation.Priority</span>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>

                <!-- Apps/Content to Block -->
                @if (Model.AppsToBlock.Any())
                {
                    <div class="card shadow-sm mb-4">
                        <div class="card-header bg-danger text-white">
                            <h5 class="mb-0"><i class="bi bi-shield-x"></i> Apps & Content to Block</h5>
                        </div>
                        <div class="card-body">
                            <p class="text-muted">Copy this list when setting up restrictions:</p>
                            <div class="bg-light p-3 rounded">
                                <code>@string.Join(", ", Model.AppsToBlock)</code>
                            </div>
                            <button class="btn btn-sm btn-outline-secondary mt-2" onclick="copyToClipboard()">
                                <i class="bi bi-clipboard"></i> Copy List
                            </button>
                        </div>
                    </div>
                }

                <!-- Apps to Allow -->
                @if (Model.AppsToAllow.Any())
                {
                    <div class="card shadow-sm mb-4">
                        <div class="card-header bg-success text-white">
                            <h5 class="mb-0"><i class="bi bi-shield-check"></i> Educational & Safe Apps</h5>
                        </div>
                        <div class="card-body">
                            <p class="text-muted">These apps are recommended for learning:</p>
                            <div class="row">
                                @foreach (var app in Model.AppsToAllow)
                                {
                                    <div class="col-md-4 col-sm-6 mb-2">
                                        <span class="badge bg-success-subtle text-success-emphasis">‚úì @app</span>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                }

                <!-- Next Steps -->
                <div class="card shadow-sm mb-4 border-info">
                    <div class="card-header bg-info text-white">
                        <h5 class="mb-0"><i class="bi bi-list-check"></i> Next Steps</h5>
                    </div>
                    <div class="card-body">
                        <ol class="mb-0">
                            <li class="mb-2">Follow our step-by-step guide below</li>
                            <li class="mb-2">Enable each recommended setting on your child's device</li>
                            <li class="mb-2">Use the checklists above to track your progress</li>
                            <li>Come back weekly for updated recommendations</li>
                        </ol>
                    </div>
                </div>

                <!-- View Guide Button -->
                <div class="d-grid gap-2 mb-4">
                    <a href="/Guides/@Model.DeviceType" class="btn btn-primary btn-lg">
                        <i class="bi bi-book"></i> View Step-by-Step Guide
                    </a>
                </div>

                <!-- Feedback Section -->
                <div class="card shadow-sm mb-4 border-warning" id="feedbackSection">
                    <div class="card-header bg-warning-subtle">
                        <h5 class="mb-0"><i class="bi bi-star"></i> Help Us Improve</h5>
                    </div>
                    <div class="card-body">
                        <p class="text-muted mb-3">
                            Your feedback helps us provide better recommendations to other parents. 
                            <strong>All data is anonymous and never shared.</strong>
                        </p>
                        
                        <form method="post" asp-page-handler="SubmitFeedback" id="feedbackForm">
                            <!-- Star Rating -->
                            <div class="mb-4">
                                <label class="form-label fw-bold">How helpful were these recommendations?</label>
                                <div class="star-rating">
                                    <input type="radio" name="Rating" value="5" id="star5" required>
                                    <label for="star5" title="Excellent">‚≠ê</label>
                                    <input type="radio" name="Rating" value="4" id="star4">
                                    <label for="star4" title="Very Good">‚≠ê</label>
                                    <input type="radio" name="Rating" value="3" id="star3">
                                    <label for="star3" title="Good">‚≠ê</label>
                                    <input type="radio" name="Rating" value="2" id="star2">
                                    <label for="star2" title="Fair">‚≠ê</label>
                                    <input type="radio" name="Rating" value="1" id="star1">
                                    <label for="star1" title="Poor">‚≠ê</label>
                                </div>
                            </div>

                            <!-- Implementation Checklist -->
                            <div class="mb-4">
                                <label class="form-label fw-bold">Which recommendations did you implement?</label>
                                <small class="text-muted d-block mb-2">(Check all that apply)</small>
                                @foreach (var rec in Model.Recommendations)
                                {
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" name="ImplementedIds" value="@rec.Id" id="impl-@rec.Id">
                                        <label class="form-check-label" for="impl-@rec.Id">
                                            @rec.Title
                                        </label>
                                    </div>
                                }
                            </div>

                            <!-- Optional Comments -->
                            <div class="mb-3">
                                <label class="form-label fw-bold">Additional feedback <small class="text-muted">(Optional)</small></label>
                                <textarea class="form-control" name="Comments" rows="3" 
                                          placeholder="What worked well? What could be improved?"></textarea>
                            </div>

                            <!-- Privacy Notice -->
                            <div class="alert alert-info small mb-3">
                                <i class="bi bi-shield-check"></i> 
                                <strong>Privacy Protected:</strong> We only store: device type, age, and which recommendations were helpful. 
                                No names, emails, or personal information. 
                                <a href="#" data-bs-toggle="modal" data-bs-target="#privacyModal">Learn more</a>
                            </div>

                            <!-- Submit Button -->
                            <div class="d-grid">
                                <button type="submit" class="btn btn-warning" id="feedbackSubmitBtn">
                                    <span id="feedbackBtnNormal">
                                        <i class="bi bi-send"></i> Submit Feedback
                                    </span>
                                    <span id="feedbackBtnLoading" class="d-none">
                                        <span class="spinner-border spinner-border-sm me-2"></span>
                                        Submitting...
                                    </span>
                                </button>
                            </div>
                        </form>

                        @if (Model.FeedbackSubmitted)
                        {
                            <div class="alert alert-success mt-3 mb-0">
                                <i class="bi bi-check-circle"></i> 
                                <strong>Thank you!</strong> Your feedback helps us improve PocketFence for all parents.
                            </div>
                        }
                    </div>
                </div>

                <!-- Save/Print Options -->
                <div class="text-center">
                    <button class="btn btn-outline-secondary" onclick="window.print()">
                        <i class="bi bi-printer"></i> Print This Page
                    </button>
                    <a href="/Setup/Start" class="btn btn-outline-primary">
                        <i class="bi bi-arrow-clockwise"></i> Start Over
                    </a>
                </div>
            }

        </div>
    </div>
</div>

<!-- Privacy Modal -->
<div class="modal fade" id="privacyModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><i class="bi bi-shield-check"></i> Privacy & Data Collection</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <h6>What we collect:</h6>
                <ul>
                    <li>Device type (iOS/Android/Windows)</li>
                    <li>Child's age (number only)</li>
                    <li>Your helpfulness rating (1-5 stars)</li>
                    <li>Which recommendations you implemented</li>
                    <li>Optional text feedback</li>
                </ul>
                
                <h6 class="mt-3">What we DON'T collect:</h6>
                <ul>
                    <li>‚ùå Your name or email</li>
                    <li>‚ùå Your child's name</li>
                    <li>‚ùå IP addresses</li>
                    <li>‚ùå Any personally identifiable information</li>
                </ul>
                
                <h6 class="mt-3">How we use it:</h6>
                <p>
                    Your anonymous feedback helps us identify which recommendations are most helpful 
                    and improve the AI for future parents. Data is aggregated (e.g., "85% of parents 
                    implemented this recommendation").
                </p>
                
                <p class="mb-0">
                    <strong>You're in control:</strong> Submitting feedback is completely optional.
                </p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function copyToClipboard() {
            const text = document.querySelector('code').textContent;
            navigator.clipboard.writeText(text).then(() => {
                alert('Copied to clipboard!');
            });
        }

        // Star rating interactivity
        const starLabels = document.querySelectorAll('.star-rating label');
        const starInputs = document.querySelectorAll('.star-rating input');
        
        starInputs.forEach((input, index) => {
            input.addEventListener('change', function() {
                // Highlight selected stars
                starLabels.forEach((label, i) => {
                    if (i >= starInputs.length - index - 1) {
                        label.style.color = '#ffc107';
                    } else {
                        label.style.color = '#ddd';
                    }
                });
            });
        });

        // Feedback form submission with loading state
        document.getElementById('feedbackForm')?.addEventListener('submit', function() {
            document.getElementById('feedbackBtnNormal').classList.add('d-none');
            document.getElementById('feedbackBtnLoading').classList.remove('d-none');
            document.getElementById('feedbackSubmitBtn').disabled = true;
        });

        // Auto-check recommendation checkboxes when user checks implementation
        document.querySelectorAll('input[name="ImplementedIds"]').forEach(implCheckbox => {
            implCheckbox.addEventListener('change', function() {
                const recId = this.value;
                const recCheckbox = document.getElementById('rec-' + recId);
                if (recCheckbox && this.checked) {
                    recCheckbox.checked = true;
                }
            });
        });
    </script>
    
    <style>
        /* Star rating styles */
        .star-rating {
            display: flex;
            flex-direction: row-reverse;
            justify-content: flex-end;
            gap: 5px;
            font-size: 2rem;
        }
        
        .star-rating input {
            display: none;
        }
        
        .star-rating label {
            cursor: pointer;
            color: #ddd;
            transition: color 0.2s;
        }
        
        .star-rating label:hover,
        .star-rating label:hover ~ label {
            color: #ffc107;
        }
        
        .star-rating input:checked ~ label {
            color: #ffc107;
        }
    </style>
}
