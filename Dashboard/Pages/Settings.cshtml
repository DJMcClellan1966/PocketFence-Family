@page
@model SettingsModel
@{
    ViewData["Title"] = "Settings";
}

<div class="row mb-4">
    <div class="col">
        <h1>Settings</h1>
        <p class="text-muted">Configure PocketFence protection</p>
    </div>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle-fill me-2"></i>@TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle-fill me-2"></i>@TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="row">
    <div class="col-md-8">
        <div class="card mb-4">
            <div class="card-header">
                <h5>Filtering Settings</h5>
            </div>
            <div class="card-body">
                <form method="post">
                    @Html.AntiForgeryToken()
                    <div class="mb-3">
                        <label class="form-label">Filtering Level</label>
                        <select class="form-select" name="filterLevel" id="filterLevelSelect">
                            <option value="strict" selected="@(Model.FilterLevel == "strict")">游댮 Strict (Recommended for young children)</option>
                            <option value="moderate" selected="@(Model.FilterLevel == "moderate")">游리 Moderate (Balanced protection)</option>
                            <option value="relaxed" selected="@(Model.FilterLevel == "relaxed")">游릭 Relaxed (Teenagers)</option>
                        </select>
                        
                        <div class="mt-3 p-3 bg-light rounded" id="filterLevelInfo">
                            <small class="text-muted">
                                <div id="strictInfo" style="display: none;">
                                    <strong>游댮 Strict Mode (Ages 5-12):</strong><br>
                                    Blocks: adult, gambling, casino, poker, bet, drugs, marijuana, cannabis, weapons, gun, violence, blood, gore, malware, phishing, illegal, torrent, pirate, crack, hack, porn, xxx, explicit, hate, racist, extremist, suicide, self-harm<br>
                                    <em>Most restrictive - blocks educational content about sensitive topics</em>
                                </div>
                                <div id="moderateInfo" style="display: none;">
                                    <strong>游리 Moderate Mode (Ages 13-15):</strong><br>
                                    Blocks: adult, gambling, drugs, weapons, violence, malware, phishing, illegal, torrent, porn, xxx<br>
                                    <em>Balanced - allows educational content while blocking inappropriate material</em>
                                </div>
                                <div id="relaxedInfo" style="display: none;">
                                    <strong>游릭 Relaxed Mode (Ages 16+):</strong><br>
                                    Blocks: adult, porn, xxx, explicit, malware, phishing, illegal<br>
                                    <em>Least restrictive - only blocks explicit content and illegal activities</em>
                                </div>
                            </small>
                        </div>
                    </div>
                    
                    <script>
                        // Show appropriate filter level info
                        function updateFilterInfo() {
                            const level = document.getElementById('filterLevelSelect').value;
                            document.getElementById('strictInfo').style.display = level === 'strict' ? 'block' : 'none';
                            document.getElementById('moderateInfo').style.display = level === 'moderate' ? 'block' : 'none';
                            document.getElementById('relaxedInfo').style.display = level === 'relaxed' ? 'block' : 'none';
                        }
                        
                        document.getElementById('filterLevelSelect').addEventListener('change', updateFilterInfo);
                        // Show current level on page load
                        updateFilterInfo();
                    </script>

                    <div class="mb-3">
                        <label class="form-label">Additional Category Blocking (Optional)</label>
                        <small class="form-text text-muted d-block mb-2">
                            Your filter level already blocks content based on keywords. Check categories below to add extra protection:
                        </small>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="blockedCategories" value="adult" id="block-adult" checked="@(Model.BlockedCategories?.Contains("adult") ?? true)">
                            <label class="form-check-label" for="block-adult">Adult Content (always recommended)</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="blockedCategories" value="violence" id="block-violence" checked="@(Model.BlockedCategories?.Contains("violence") ?? true)">
                            <label class="form-check-label" for="block-violence">Violence</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="blockedCategories" value="hate" id="block-hate" checked="@(Model.BlockedCategories?.Contains("hate") ?? true)">
                            <label class="form-check-label" for="block-hate">Hate Speech</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="blockedCategories" value="drugs" id="block-drugs" checked="@(Model.BlockedCategories?.Contains("drugs") ?? true)">
                            <label class="form-check-label" for="block-drugs">Drugs & Alcohol</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" name="blockedCategories" value="gambling" id="block-gambling" checked="@(Model.BlockedCategories?.Contains("gambling") ?? true)">
                            <label class="form-check-label" for="block-gambling">Gambling</label>
                        </div>
                        <small class="form-text text-muted mt-2 d-block">
                            <em>Note: These categories work alongside your filter level keywords for comprehensive protection.</em>
                        </small>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Notification Email</label>
                        <input type="email" class="form-control" name="notificationEmail" 
                               placeholder="parent@example.com" value="@Model.NotificationEmail">
                        <small class="form-text text-muted">Receive alerts for blocked content</small>
                    </div>

                    <button type="submit" class="btn btn-primary" id="saveSettingsBtn">
                        <span class="btn-text">Save Settings</span>
                        <span class="spinner-border spinner-border-sm d-none" role="status" aria-hidden="true"></span>
                    </button>
                </form>
                
                <script>
                    document.querySelector('form').addEventListener('submit', function(e) {
                        const btn = document.getElementById('saveSettingsBtn');
                        btn.disabled = true;
                        btn.querySelector('.btn-text').classList.add('d-none');
                        btn.querySelector('.spinner-border').classList.remove('d-none');
                        
                        // Form will submit normally - don't prevent default
                        // The spinner will show until page redirects
                    });
                </script>
            </div>
        </div>

        <div class="card mb-4">
            <div class="card-header">
                <h5>Custom Blocklist</h5>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <label class="form-label">Add Domain to Block</label>
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="example.com" id="customBlock">
                        <button class="btn btn-outline-secondary" type="button" id="addBlockBtn" onclick="addCustomBlock(this)">
                            <span class="btn-text">Add</span>
                            <span class="spinner-border spinner-border-sm d-none" role="status" aria-hidden="true"></span>
                        </button>
                    </div>
                    
                    <script>
                        function addCustomBlock(btn) {
                            const input = document.getElementById('customBlock');
                            if (!input.value.trim()) return;
                            
                            btn.disabled = true;
                            btn.querySelector('.btn-text').classList.add('d-none');
                            btn.querySelector('.spinner-border').classList.remove('d-none');
                            
                            // Simulate adding domain
                            setTimeout(() => {
                                showToast('Domain "' + input.value + '" added to blocklist', 'success');
                                input.value = '';
                                btn.disabled = false;
                                btn.querySelector('.btn-text').classList.remove('d-none');
                                btn.querySelector('.spinner-border').classList.add('d-none');
                            }, 1000);
                        }
                    </script>
                </div>
                <div>
                    <small class="text-muted">Custom blocked domains: None yet</small>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card mb-4">
            <div class="card-header">
                <h5>Quick Stats</h5>
            </div>
            <div class="card-body">
                <p><strong>Protection Status:</strong> <span class="badge bg-success">Active</span></p>
                <p><strong>Last Update:</strong> @DateTime.Now.ToString("MM/dd/yyyy")</p>
                <p><strong>Version:</strong> 1.0.0</p>
            </div>
        </div>

        <div class="card">
            <div class="card-header">
                <h5>Need Help?</h5>
            </div>
            <div class="card-body">
                <p><small>Check out our documentation or contact support.</small></p>
                <a href="#" class="btn btn-sm btn-outline-primary">Documentation</a>
            </div>
        </div>
    </div>
</div>
